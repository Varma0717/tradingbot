# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_SANDBOX=true

COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# Database Configuration (MySQL via XAMPP)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/crypto_trading_bot
DATABASE_ECHO=false
DB_HOST=localhost
DB_PORT=3306
DB_NAME=crypto_trading_bot
DB_USER=root
DB_PASSWORD=

# Notification Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@tradingbot.com

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
SECRET_KEY=your_secret_key_for_encryption

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Development
DEBUG=false
ENVIRONMENT=production

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_SECRET_KEY=your_dashboard_secret_key

# Performance
MAX_WORKERS=4
CACHE_TTL=300

# Risk Management Defaults
DEFAULT_STOP_LOSS=0.02
DEFAULT_TAKE_PROFIT=0.06
DEFAULT_MAX_POSITION_SIZE=0.1
DEFAULT_MAX_DRAWDOWN=0.15
